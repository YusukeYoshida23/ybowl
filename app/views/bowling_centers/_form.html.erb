      </tr>
      <tr>
        <th><%= form.label :phone_number , "電話番号" %></th>
        <td><%= form.text_field :phone_number %></td>
      </tr>
      <tr>
        <th><%= form.label :hp , "ホームページ" %></th>
        <td><%= form.text_field :hp %></td>
      </tr>
    </table>

    <div class="actions mt-3">
      <%= form.submit %>
    </div>
  <% end %>
</div>
