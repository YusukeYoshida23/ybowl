<p id="notice"><%= notice %></p>

<h1>Bowling Centers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bowling_centers.each do |bowling_center| %>
      <tr>
        <td class=h2><%= link_to bowling_center.name, bowling_center %></td>
        <td class=h3><%= link_to '削除', bowling_center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ボウリング場を登録する', new_bowling_center_path %>
<%= link_to 'トップに戻る', root_path %>
