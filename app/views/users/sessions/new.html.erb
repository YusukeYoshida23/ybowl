<div class="container justify-content-center">
  <h2 class="text-center">ログイン</h2>
  <div class="sign-up-body">
    <div class="sign-up-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"session_email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", id:"session_password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を保存 %>
          </div>
        <% end %>

        <div class="actions text-center">
          <%= f.submit "ログイン", id:"login" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "新規登録", new_user_registration_path, class:"btn btn-secondary m-3 text-decoration-none text-white" %>
    <%= link_to "トップに戻る", root_path, class:"btn btn-outline-dark m-3 text-decoration-none" %>
  </div>
</div>
